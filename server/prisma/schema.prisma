// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  id        String   @id @default(cuid())
  number    BigInt
  hash      String
  chain     String   // "ETH" or "BTC"
  timestamp DateTime
  createdAt DateTime @default(now())

  transactions Transaction[]

  @@unique([number, chain], name: "number_chain")
  @@unique([hash, chain])
}

model Transaction {
  id        String   @id @default(cuid())
  hash      String
  from      String
  to        String
  value     String
  asset     String
  chain     String   // "ETH" or "BTC"
  blockNum  BigInt
  timestamp DateTime
  createdAt DateTime @default(now())

  // Relation to Block
  block     Block    @relation(fields: [blockNum, chain], references: [number, chain])

  @@unique([hash, chain])
  @@index([from])
  @@index([to])
  @@index([chain, blockNum])
}
